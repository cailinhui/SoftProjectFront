<image
  src="../../icon/710.png"
  mode="aspectFit"
  style="width: 100%;"
>
</image>
<view class="body">
  <view class="login_one">
    <view class="login_one_text">
      账号
    </view>
    <view class="login_one_">
      <input
        class="input1"
        value="{{username}}"
        type="text"
        placeholder="请输入手机号"
        maxlength="20"
        bindinput="susername"
      >
      </input>
    </view>

  </view>
  <view class="login_one">
    <view class="login_one_text">
      密码
    </view>
    <view class="login_one_">
      <input
        class="input2"
        value="{{password}}"
        password="{{!open}}"
        type="text"
        placeholder="请输入密码"
        maxlength="20"
        bindinput="spassword"
      >
      </input>
      <image
        src="{{open?'../../icon/oeyes.png':'../../icon/ceyes.png'}}"
        class="login_one_eyes"
        catchtap="switch"
      />
    </view>

  </view>
</view>
<view class="bottom">
  <button class="denglu" bindtap="slogin">
    登录
  </button>
</view >
<view class="zuche" bindtap="regist">
没有账号 ? 注册
</view>
